<h3 class="ui header">{{t "forms.i-i-s-hardware-and-software-accounting-operations-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hardware-and-software-accounting-operations-e.date-caption"}}</label>
    {{
      flexberry-simpledatetime
      type="date"
      placeholder=(t 'components.flexberry-datepicker.placeholder')
      readonly=readonly
      value=model.date
      class=(if (v-get validationObject "date" "isInvalid") "error")
      data-test-i-i-s-hardware-and-software-accounting-operations-e-date=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "date" "message")}}
  </div>

  <div class="field" data-test-i-i-s-hardware-and-software-accounting-operations-e-action="true">
    <label>{{t "forms.i-i-s-hardware-and-software-accounting-operations-e.action-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-hardware-and-software-accounting-t-action")
      value=model.action
      class=(if (v-get validationObject "action" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationObject "action" "message")}}
  </div>
  <div class="field" data-test-i-i-s-hardware-and-software-accounting-operations-e-state="true">
    <label>{{t "forms.i-i-s-hardware-and-software-accounting-operations-e.state-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-hardware-and-software-accounting-t-state")
      value=model.state
      class=(if (v-get validationObject "state" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationObject "state" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hardware-and-software-accounting-operations-e.hardware-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.hardware
      class=(if (v-get validationObject "hardware" "isInvalid") "error")
      displayAttributeName="inventoryNumber"
      autocomplete=true
      relationName="hardware"
      projection="HardwareL"
      title=(t "forms.i-i-s-hardware-and-software-accounting-operations-e.hardware-caption")
      readonly=readonly
      componentName="hardwareLookup"
      class=(if (v-get validationObject "hardware" "isInvalid") "error")
      data-test-i-i-s-hardware-and-software-accounting-operations-e-hardware=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "hardware" "message")}}
  </div>

  <div class="field">
    <label>{{t "forms.i-i-s-hardware-and-software-accounting-operations-e.admin-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.admin
      class=(if (v-get validationObject "admin" "isInvalid") "error")
      displayAttributeName="name"
      autocomplete=true
      relationName="admin"
      projection="UserL"
      title=(t "forms.i-i-s-hardware-and-software-accounting-operations-e.admin-caption")
      readonly=readonly
      componentName="adminLookup"
      class=(if (v-get validationObject "admin" "isInvalid") "error")
      data-test-i-i-s-hardware-and-software-accounting-operations-e-admin=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "admin" "message")}}
  </div>

</form>